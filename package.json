{
  "name": "emr-cafe",
  "version": "1.0.3",
  "description": "Cafe adisyon sistemi (Electron frontend)",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "package": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-log": "^5.2.0",
    "electron-updater": "^6.6.2",
    "socket.io-client": "^4.7.2",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.0.1",
    "electron": "^28.1.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "vite": "^5.2.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.emrcore.cafe",
    "productName": "EMR Cafe",
    "icon": "assets/icon.ico",
    "files": [
      "electron/**/*",
      "config/**/*"
    ],
    "asarUnpack": [
      "electron/**"
    ],
    "extraResources": [
      { "from": "electron/ip-config.json", "to": "electron/ip-config.json" }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "emrcore",
        "repo": "emr-cafe-desktop"
      }
    ],
    "win": {
      "target": [
        { "target": "nsis", "arch": [ "x64" ] }
      ],
      "artifactName": "EMR-Cafe-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": {
    "name": "EMR CORE",
    "email": "destek@emrcore.com.tr"
  },
  "license": "MIT"
}
